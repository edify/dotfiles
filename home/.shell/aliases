# Git
alias st='git status'
alias gpl='git smart-pull'
alias gps='git push'
alias gt='git track'
alias gco='git co'
alias gl='git l'
alias glo='git lol'
alias gcm='git cm'
alias gun='git unstage'
alias gts='git staged'
alias gdf='git unstaged'
alias ga='git add'
alias gau='git add -u'

# Git flow
alias gfft='git flow feature start'
alias gfff='git flow feature finish'
alias gfrt='git flow release start'
alias gfrf='git flow release finish'
alias gfi='git flow init'

# Rails
alias sc='script/console'
alias ss='script/server'
alias sg='script/generate'
alias tlog='tail -f log/development.log'
alias migrate='rake db:migrate db:test:clone'

# Utility
alias reload='source ~/.zshrc'

# Quicker cd
alias ..="cd .."

# My Code folder
edify() {
  if [ -f $DROPBOX_HOME/etc/api-edify.keys ]; then
    . $DROPBOX_HOME/etc/api-edify.keys
  fi
}
puresrc() {
  if [ -f $DROPBOX_HOME/etc/api-puresrc.keys ]; then
    . $DROPBOX_HOME/etc/api-puresrc.keys
  fi
}
jarias() {
  if [ -f $DROPBOX_HOME/etc/api.keys ]; then
    . $DROPBOX_HOME/etc/api.keys
  fi
}

k() {
 if [[ "$*" =~ edify* ]]; then
 	edify
 elif [[ "$*" =~ puresrc* ]]; then
  puresrc
 else
 	jarias
 fi
 cd ~/Code/$1
}

alias g='gradle'
alias gtd='GRADLE_OPTS="-Xdebug -Xrunjdwp:transport=dt_socket,server=y,suspend=n,address=5005" gradle tomcatRun'

# Common -- Some are from Damian Conway
alias ls='ls -G'
alias a='ls -A' # -A all except literal . ..
alias la="ls -A -l -G"
alias c='clear'
alias cdd='cd -'  # goto last dir cd'ed from
alias cl='clear; l'
function cdc() { 
    cd $1; ls 
}
alias cls='clear; ls'
alias h='history'
alias l.='ls -d .[^.]*'
alias l='ls -lhGt'  # -l long listing, most recent first
                    # -G color
alias lh='ls -lh'
alias ll='ls -lhG'  # -l long listing, human readable, no group info
alias lt='ls -lt' # sort with recently modified first
alias md='mkdir -p'
alias s='cd ..'   # up one dir

function take() {
    mkdir -p "$1"
    cd "$1" 
}

alias e='exit'
alias k9="killall -9"
function killnamed () {
	ps ax | grep $1 | cut -d ' ' -f 2 | xargs kill
}

function zipr() {
	zip -r $1.zip $1
}

# Finder
alias o='open . &'

# Processes
alias tu='top -o cpu' # cpu
alias tm='top -o vsize' # memory

# Ruby
alias r="rake"
