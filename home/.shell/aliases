# Git
alias st='git status'
alias gpl='git smart-pull'
alias gps='git push'
alias gt='git track'
alias gco='git co'
alias gl='git l'
alias glo='git lol'
alias gcm='git cm'
alias gun='git unstage'
alias gts='git staged'
alias gdf='git unstaged'
alias ga='git add . ; git status'
alias gau='git add -u ; git status'

# Command Enhancements

# Utility
alias reload='source ~/.zshrc'

# Quicker cd
alias ..="cd .."

# My Code folder
edify() {
  if [ -f $DROPBOX_HOME/etc/api-edify.keys ]; then
    . $DROPBOX_HOME/etc/api-edify.keys
  fi
}
jarias() {
  if [ -f $DROPBOX_HOME/etc/api.keys ]; then
    . $DROPBOX_HOME/etc/api.keys
  fi
}

k() {
 if [[ "$*" =~ edify* ]]; then
 	edify
 else
 	jarias
 fi
 cd ~/Code/$1
}

_k() { _files -W ~/Code -/; }
compdef _k k

alias g='gradle'
alias gtr='GRADLE_OPTS="-Xdebug -Xrunjdwp:transport=dt_socket,server=y,suspend=n,address=5005 -javaagent:$REBEL_HOME/jrebel.jar -Drebel.log4j-plugin=false $JAVA_OPTS" g tomcatRun'

# Common -- Some are from Damian Conway
alias ls='ls -G'
alias a='ls -A' # -A all except literal . ..
alias la="ls -A -l -G"
alias c='clear'
alias cdd='cd -'  # goto last dir cd'ed from
alias cl='clear; l'
function cdc() { 
    cd $1; ls 
}
alias cls='clear; ls'
alias h='history'
alias l.='ls -d .[^.]*'
alias l='ls -lhGt'  # -l long listing, most recent first
                    # -G color
alias lh='ls -lh'
alias ll='ls -lhG'  # -l long listing, human readable, no group info
alias lt='ls -lt' # sort with recently modified first
alias md='mkdir -p'
alias s='cd ..'   # up one dir

function take() {
    mkdir -p "$1"
    cd "$1" 
}

alias e='exit'
alias k9="killall -9"
function killnamed () {
	ps ax | grep $1 | cut -d ' ' -f 2 | xargs kill
}

function zipr() {
	zip -r $1.zip $1
}

# Finder
alias o='open . &'

# Processes
alias tu='top -o cpu' # cpu
alias tm='top -o vsize' # memory

# Ruby
alias r="rake"
